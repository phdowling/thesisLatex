	pmid = {22836105},
	keywords = {Certification, Clinical Competence, Computer-Assisted Instruction, Computer Simulation, Curriculum, Education, Medical, Graduate, Humans, Learning Curve, Models, Cardiovascular, Vascular Surgical Procedures}
}

